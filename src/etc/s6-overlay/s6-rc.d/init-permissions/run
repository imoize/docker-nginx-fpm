#!/command/with-contenv bash
# shellcheck shell=bash

#Â permissions
chown disty:disty \
    /config/log

chown -R disty:disty \
    /var/lib/nginx \
    /var/tmp/nginx

chown -R disty:disty \
    /config/ssl \
    /config/nginx \
    /config/php

chown -R disty:disty \
    /config/www \
    /config/log/nginx \
    /config/log/php

chmod -R g+w \
    /config/nginx

chmod -R 644 /etc/logrotate.d

if [[ -f "/config/log/logrotate.status" ]]; then
    chmod 600 /config/log/logrotate.status
fi